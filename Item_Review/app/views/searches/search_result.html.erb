<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
          <%= link_to user_path(user.id) do %>
          <%= user.name %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
          <%= link_to item_path(item.id) do %>
          <%= item.name %>
          <% end %>
          </td>
          <td><%= item.price %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>