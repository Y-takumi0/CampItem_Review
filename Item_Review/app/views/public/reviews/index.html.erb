<div class="container">
  <div>
    <header class="card-header">
      <p>
        <%= link_to item_path(@item.id) do %>
        <%= @item.name %>
      </p>
      <img style="width: 200px; height: 200px;" src="<%= url_for(@item.image) %>">
      <% end %>
      </header>
      </div>
      <table class="table is-fullwidth has-text-centered">
        <thead>
            <tr>
              <th>ユーザー</th>
              <th>点数</th>
              <th>内容</th>
              <th>コメント件数</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= link_to user_path(review.user.id) do %>
                  <%= review.user.name %>
                  <% end %>
                  </td>
              <td>
                <div id="star_<%= review.id %>"></div>
            <script>
$(document).on('turbolinks:load', function() {
  let elem = document.querySelector('#star_<%= review.id %>');
  if (elem == null) return;

  elem.innerHTML = "";
  let opt = {
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    score: "<%= review.star %>",
    readOnly: true,
  };
  raty(elem, opt);
});
</script>
          </td>
                <td><%= review.article %></td>
                <td><div>
  <p><%= review.comments.count %></p>

</div></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
