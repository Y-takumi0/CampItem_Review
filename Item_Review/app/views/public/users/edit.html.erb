<div class="container">
  <%= form_with model: @user, url: user_path, method: :patch do |f| %>
  <div class="row">
    <div class="col">
      <h4 class="my-5">会員情報編集</h4>
      <!-- 本人会員情報編集-->
      <table class="table table-borderless">
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>アイコン</td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td>プロフィール</td>
          <td><%= f.text_area :plofile %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>
        <tr>
          <td></td>
          <td class="action"><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
      <!-- -->
    </div>
  </div>
</div>