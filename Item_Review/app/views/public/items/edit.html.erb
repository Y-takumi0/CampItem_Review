<div class="container">
  <div class="row">
    <h4 class="my-3 bg-light">アイテム編集</h4>
  </div>
  <div class="row">
    <%= form_with model: @item, url: item_path(@item), method: :patch, local: true, class: "mx-auto" do |f| %>
    <% render "public/shared/error_messages", resource: @item %>
    <!-- 商品画像の更新 -->
    <strong class="my-2 col-sm-3">アイテム画像</strong>
    <div class="my-2 col-sm-9">
      <%= f.file_field :image %>
    </div>
    <!-- 商品名の更新 -->
    <strong class="my-2 col-sm-3">アイテム名</strong>
    <div class="my-2 col-sm-9">
      <%= f.text_field :name, size:"56x5" %>
    </div>
    <!-- 商品説明の更新 -->
    <strong class="my-2 col-sm-3">アイテム品説明</strong>
    <div class="my-2 col-sm-9">
      <%= f.text_area :introduction, size:"55x5" %>
    </div>
    <!-- 商品ジャンルの更新 -->
    <strong class="my-2 col-sm-3">カテゴリー</strong>
    <div class="my-2 col-sm-9">
      <%= f.collection_select :category_ids, Category.all, :id,:name,{prompt: "--選択してください--"}, {multiple: true} %>
    </div>
    <!-- 商品税抜価格の更新 -->
    <strong class="my-2 col-sm-3">価格</strong>
    <div class="my-2 col-sm-9">
      <%= f.text_field :price %>
    </div>
    <!-- 商品販売ステータスの更新 -->
    <strong class="my-2 col-sm-3">発売日</strong>
    <div class="my-2 col-sm-9">
      <%= f.date_field :on_sale %>
    </div>
    <div class="my-2 col-lg-3"></div>
    <div class="my-2 col-lg-9"><%= f.submit "変更内容を保存", class: "btn btn-success" %></div>
    <% end %>
    </div>
</div>