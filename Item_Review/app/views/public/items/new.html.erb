<div class="container">
  <div class="row">
    <h4 class="my-3 bg-light">アイテム新規登録</h4>
  </div>
  <div class="row">
    <%= form_with model: @item, local: true, class: 'mx-auto' do |f| %>
    <!--  商品画像の追加 -->
    <strong class="my-2 col-sm-3">アイテム画像</strong>
    <div class="my-2 col-sm-9">
      <%= f.file_field :image %>
    </div>
    <!--  商品名の追加 -->
    <strong class="my-2 col-sm-3">アイテム名</strong>
    <div class="my-2 col-sm-9">
      <%= f.text_field :name, size:"56x5" %>
    </div>
    <!--  商品説明の追加 -->
    <strong class="my-2 col-sm-3">アイテム説明</strong>
    <div class="my-2 col-sm-9">
      <%= f.text_area :introduction, size:"55x5" %>
    </div>

    <div class="check_box">
    <strong class="my-2 col-sm-3">カテゴリー</strong>
    <%= f.collection_select :category_ids, Category.all, :id,:name,{prompt: "--選択してください--"}, {multiple: true} %>
    </div>

    <!--  商品税抜価格の追加 -->
    <strong class="my-2 col-sm-3">税抜価格</strong>
    <div class="my-2 col-sm-9">
      <%= f.text_field :price %>
    </div>

    <!--  商品税抜価格の追加 -->
    <strong class="my-2 col-sm-3">発売日</strong>
    <div class="my-2 col-sm-9">
      <%= f.date_field :on_sale %>
    </div>

    <!--  -->
    <div class="my-2 col-lg-3"></div>
    <div class="my-2 col-lg-9"><%= f.submit "新規登録", class: "btn btn-success" %></div>
    <% end %>
    </div>
</div>