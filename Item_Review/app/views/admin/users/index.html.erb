<div class="container">
  <div class="row">
    <h4 class="my-5 bg-light">ユーザー一覧</h4>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to admin_user_path(user.id) do %>
            <% if user.image.attached? %>
              <%= image_tag user.image, size: "100x100" %>
            <% else %>
              <%= image_tag 'no-image', size: "100x100" %>
            <% end %>
          <% end %></td>
        <td>
          <%= link_to admin_user_path(user.id) do %>
          <%= user.name %>
          <% end %>
        </td>
        <td><%= user.email %></td>
        <td class="<%= user.is_active ? 'text-green' : 'text-greay' %>"><%= user.is_active ? '有効' : '退会済み' %></td>
      </tr>
    <% end %>
  </table>
</div>
