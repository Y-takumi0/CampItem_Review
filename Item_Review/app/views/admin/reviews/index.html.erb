<div class="container">
  <div>
    <header class="card-header">
      <p class="card-header-title">
        <%= @item.name %>
      </p>
      <img class="col-sm-3" style="width: 200px; height: 200px;" src="<%= url_for(@item.image) %>">
      </header>
      </div>
      <table class="table is-fullwidth has-text-centered">
        <thead>
            <tr>
              <th>ユーザー</th>
              <th>点数</th>
              <th>内容</th>
              <th>コメント件数</th>
              <th>表示ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= link_to admin_user_path(review.user.id) do %>
                  <%= review.user.name %>
                  <% end %>
                  </td>
              <td>
                <div id="star_<%= review.id %>"></div>
            <script>
$(document).on('turbolinks:load', function() {
  let elem = document.querySelector('#star_<%= review.id %>');
  if (elem == null) return;

  elem.innerHTML = "";
  let opt = {
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    score: "<%= review.star %>",
    readOnly: true,
  };
  raty(elem, opt);
});
</script>
          </td>
                <td><%= review.article %></td>
                <td><%= review.comments.count %></td>
                <td><%= review.display_status ? '表示' : '非表示' %>
      <div>
      <%= form_with model: review, url: admin_item_reviews_path(review), method: :patch, local: true do |f| %>
      <div class="my-2 col-sm-9">
        <%= f.radio_button :display_status, "ture" %>
        <%= f.label :display_status, "表示" %>
        <%= f.radio_button :display_status, "false" %>
        <%= f.label :display_status, "非表示" %>
      </div>
      <!-- 更新ボタンの調整 -->
      <div class="my-2 col-lg-3"></div>
      <div class="my-2 col-lg-9"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
      <% end %>
      </div>
      </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>